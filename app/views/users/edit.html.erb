<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %>
<% end %>
<% end %>

<%= form_for(@user) do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<p class="emoji-picker-container">
<%= f.label :bio %>
<%= f.text_area :bio, size: '60x5', data: { emojiable: true } %>
</p>
<br>
<%= f.submit%>

<%end%>
