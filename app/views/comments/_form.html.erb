<% if flash[:errors] %>
<% flash.errors.each do |error| %>
<%= error %>
<% end %>
<% end %>

<%= form_with model: @comment do |f| %>
<%= f.hidden_field :post_id %>
<%= f.hidden_field :user_id %>

<%= f.label "Fight Me!" %>
<br>
<%= f.text_area :content, size: '60x5' %>
<br>
<%= f.submit "Post Comment" %>
<% end %>
