<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %>
<% end %>
<% end %>

<%= form_for(@user) do |f|%>
<h5><%= f.label :name %></h5>

<%= f.text_field :name %>
<br>
<br>
<p class="emoji-picker-container">
<h5><%= f.label :bio %></h5>

<%= f.text_area :bio, size: '60x5', data: { emojiable: true } %>
</p>
<br>
<%= f.submit%>

<%end%>
