<% if flash[:errors] %>
<% flash[:errors].each do |error| %>
<%= error %>
<% end %>
<% end %>

<%= form_for(@user) do |f|%>
<%= f.label :name %>
<%= f.text_field :name %>
<br>
<p class="emoji-picker-container">
<%= f.label :bio %>
<%= f.text_area :bio, size: '60x5', data: { emojiable: true } %>
</p>
<br>
<%= f.submit%>
<h1>Hello World</h1>
<button type="button" class="btn btn-secondary" data-toggle="tooltip" data-placement="top" title="Tooltip on top">
  Tooltip on top
</button>
<%end%>
